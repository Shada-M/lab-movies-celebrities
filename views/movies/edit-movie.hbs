<html >
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Movie</title>
</head>
<body>
  <h2>Edit Movie</h2>
  <form action="/movies/{{ movie._id }}/edit" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{ movie.title }}" required><br><br>

    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="{{ movie.genre }}" required><br><br>

    <label for="plot">Plot:</label>
    <textarea id="plot" name="plot" rows="4" required>{{ movie.plot }}</textarea><br><br>

    <label for="cast">Cast:</label>
    <select id="cast" name="cast" multiple required>
      {{#each celebrities}}
        <option >{{ this.name }}</option>
      {{/each}}
    </select><br><br>

    <button type="submit">Save Changes</button>
  </form>
</body>
</html>